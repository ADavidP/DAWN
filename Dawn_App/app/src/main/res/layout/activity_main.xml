<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"/>

    <TextView
        android:id="@+id/Sound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="Sound"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0"/>

    <androidx.appcompat.widget.SwitchCompat
        android:theme="@style/AppTheme"
        android:id="@+id/stereo_switch"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:gravity="start"
        android:text="Stereo"
        android:onClick="switchStereo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Sound" />
    
    <androidx.appcompat.widget.SwitchCompat
        android:theme="@style/AppTheme"
        android:id="@+id/brsound"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:gravity="start"
        android:onClick="toggleBedRoom"
        android:text="@string/bedroom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stereo_switch" />
    
    <androidx.appcompat.widget.SwitchCompat
        android:theme="@style/AppTheme"
        android:id="@+id/lrsound"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:gravity="start"
        android:text="@string/living_room"
        android:onClick="toggleLivingRoom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/brsound" />

    <ImageView
        android:id="@+id/volume_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_d7e439873663de4a6085f538d3ab09df__1_"
        app:layout_constraintTop_toBottomOf="@+id/lrsound"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/volume"
        android:layout_width="315dp"
        android:layout_height="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:max="63"
        android:theme="@style/AppTheme"
        app:layout_constraintStart_toEndOf="@+id/volume_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/volume_icon"
        app:layout_constraintBottom_toBottomOf="@+id/volume_icon" />

    <HorizontalScrollView
        android:id="@+id/stations"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/volume_icon">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/fip"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:onClick="fip"
                app:srcCompat="@drawable/fip_icon" />


            <ImageView
                android:id="@+id/fip_electro"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:onClick="fip_electro"
                app:srcCompat="@drawable/fip_electro" />

            <ImageView
                android:id="@+id/triplej"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:onClick="triplej"
                app:srcCompat="@drawable/triplej_icon" />

            <ImageView
                android:id="@+id/folk_forward"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:onClick="folk_forward"
                app:srcCompat="@drawable/folkfwd_icon" />

            <ImageView
                android:id="@+id/gaydio"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:onClick="gaydio"
                app:srcCompat="@drawable/gaydio_icon" />

            <ImageView
                android:id="@+id/bbc6"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:onClick="bbc6"
                app:srcCompat="@drawable/bbc_icon" />

            <ImageView
                android:id="@+id/seven_inch_soul"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:onClick="seven_inch_soul"
                app:srcCompat="@drawable/_soul_400" />

            <ImageView
                android:id="@+id/heavyweight_reggae"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:onClick="heavyweight_reggae"
                app:srcCompat="@drawable/reggae400" />

            <ImageView
                android:id="@+id/spotify"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:onClick="toggleSpotify"
                app:srcCompat="@drawable/spotify_logo_png_7053" />


        </LinearLayout>
    </HorizontalScrollView>



    <TextView
        android:id="@+id/Lights"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:text="Lights"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stations" />

    <androidx.appcompat.widget.SwitchCompat
        android:theme="@style/AppTheme"
        android:id="@+id/brl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:gravity="start"
        android:onClick="bedroomLights"
        android:text="Bedroom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Lights" />

    <androidx.appcompat.widget.SwitchCompat
        android:theme="@style/AppTheme"
        android:id="@+id/lrl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:gravity="start"
        android:onClick="livingRoomLights"
        android:text="Living Room"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/brl" />

    <androidx.appcompat.widget.SwitchCompat
        android:theme="@style/AppTheme"
        android:id="@+id/ol"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:gravity="start"
        android:onClick="officeLights"
        android:text="Office"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lrl" />

    <androidx.appcompat.widget.SwitchCompat
        android:theme="@style/AppTheme"
        android:id="@+id/kl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:gravity="start"
        android:onClick="kitchenLights"
        android:text="Kitchen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ol" />

    <androidx.appcompat.widget.SwitchCompat
        android:theme="@style/AppTheme"
        android:id="@+id/pm"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:gravity="start"
        android:onClick="partyMode"
        android:text="Party Mode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kl" />

    <Button
        android:id="@+id/ChooseTimeMF"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:onClick="setMFAlarm"
        android:text="Weekday Alarm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Alarms" />

    <Button
        android:id="@+id/ClearMF"
        android:layout_width="36dp"
        android:layout_height="39dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:onClick="clearMFAlarm"
        android:text="X"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Alarms" />

    <TextView
        android:id="@+id/MF_Time"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:gravity="center"
        android:text="07:35"
        app:layout_constraintRight_toLeftOf="@+id/ClearMF"
        app:layout_constraintTop_toBottomOf="@+id/Alarms" />

    <Button
        android:id="@+id/ChooseTimeSS"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:onClick="setSSAlarm"
        android:text="Weekend Alarm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ChooseTimeMF" />

    <TextView
        android:id="@+id/SS_Time"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:gravity="center"
        android:text="10:00"
        app:layout_constraintRight_toLeftOf="@+id/ClearSS"
        app:layout_constraintTop_toBottomOf="@+id/MF_Time" />

    <Button
        android:id="@+id/ClearSS"
        android:layout_width="36dp"
        android:layout_height="39dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:onClick="clearSSAlarm"
        android:text="X"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ClearMF" />

    <ImageView
        android:id="@+id/brightness_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_brightness_low_24px"
        app:layout_constraintTop_toBottomOf="@+id/pm"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/brightness"
        android:layout_width="315dp"
        android:layout_height="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:max="63"
        android:theme="@style/AppTheme"
        app:layout_constraintStart_toEndOf="@+id/brightness_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/brightness_icon"
        app:layout_constraintBottom_toBottomOf="@+id/brightness_icon" />

    <Button
        android:id="@+id/Colour"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_marginStart="8dp"
        android:onClick="colourPicker"
        android:text="Colour"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/brightness_icon" />

    <TextView
        android:id="@+id/Alarms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:text="Alarms"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Colour" />
    
    <TextView
        android:id="@+id/Router"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:text="Router"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ChooseTimeSS" />

    <Button
        android:id="@+id/Reset"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:onClick="resetRouter"
        android:text="Reset"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Router" />


</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>